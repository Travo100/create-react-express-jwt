{
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "prettier",
  "plugins": ["prettier"],
  "rules": {
    "no-duplicate-case": "error",
    "no-empty": "error",
    "no-extra-semi": "error",
    "no-func-assign": "error",
    "no-irregular-whitespace": "error",
    "no-unreachable": "error",
    "curly": "error",
    "dot-notation": "error",
    "eol-last":"error",
    "eqeqeq": "error",
    "no-empty-function": "error",
    "no-multi-spaces": "error",
    "no-multiple-empty-lines":"error",
    "no-unused-vars": "error",
    "no-var": "error",
    "camelcase": "error",
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "prefer-arrow-callback": "error",
    "prefer-const": "error",
    "prettier/prettier": "error"
  }
}
